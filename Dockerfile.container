FROM alpine AS tools_builder

RUN apk add --no-cache busybox && /bin/busybox --install -s /bin

FROM scratch

ARG TARGETOS
ARG TARGETARCH

WORKDIR /

COPY --from=tools_builder /bin/sh /bin/sh
RUN mkdir -p /binaries /bin
COPY --from=tools_builder /bin/ls /bin/ls

COPY bin/*$TARGETOS-$TARGETARCH /binaries/

CMD ["/bin/ls", "-lrt", "/binaries/"]